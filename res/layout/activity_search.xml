<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/share_location_guide_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar_equip" />

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="6.0dip" >

            <RelativeLayout
                android:id="@+id/province_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择省份"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/province_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/province_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/province_arrow"
                    android:layout_toRightOf="@id/please_choose_province"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/city_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/province_choose"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择城市"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/city_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/city_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/city_arrow"
                    android:layout_toRightOf="@id/please_choose_city"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/area_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_choose"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择地区"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/area_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/area_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/area_arrow"
                    android:layout_toRightOf="@id/please_choose_area"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/equip_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area_choose"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_equip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备类型"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/equip_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/equip_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/equip_arrow"
                    android:layout_toRightOf="@id/please_choose_equip"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/age_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/equip_choose"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="使用年限"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/age_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/age_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/age_arrow"
                    android:layout_toRightOf="@id/please_choose_age"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/range_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age_choose"
                android:background="@drawable/activity_panel_background"
                android:clickable="true"
                android:paddingBottom="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="16.0dip" >

                <TextView
                    android:id="@+id/please_choose_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="风险区间"
                    android:textColor="#ff333333"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/range_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/activity_loc_arrow" />

                <TextView
                    android:id="@+id/range_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/range_arrow"
                    android:layout_toRightOf="@id/please_choose_range"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#ff676767"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/go_to_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/range_choose"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="4.0dip"
                android:background="@drawable/activity_modify_btn_background"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="14.5dip"
                android:paddingTop="14.5dip"
                android:text="搜索"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>