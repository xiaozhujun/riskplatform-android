<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    android:orientation="vertical"
    tools:context=".MapActivity" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mMapView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <include
            android:id="@+id/searchbar"
            layout="@layout/common_searchbox_home" />

        <LinearLayout
            android:id="@+id/sp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_on"
            android:visibility="gone" >

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="40.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dip"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/zoom_in"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="@drawable/main_topbutton"
            android:src="@drawable/main_zoomin" />

        <ImageButton
            android:id="@+id/zoom_out"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="@drawable/main_bottombutton"
            android:src="@drawable/main_zoomout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mynormalbar"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/main_bottombar_background"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_bl_button_background"
                android:clickable="true" >

                <FrameLayout
                    android:id="@+id/hot_nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/redpoint_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginTop="5.0dip"
                        android:src="@drawable/hot_point"
                        android:visibility="gone" />

                    <TextView
                        style="@style/BottomBarTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:drawableLeft="@drawable/main_icon_nearby"
                        android:text="附近" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="16.0dip"
                android:background="#ffcccccc" />

            <RelativeLayout
                android:id="@+id/route"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_bm_button_background"
                android:clickable="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/main_icon_route" />

                    <TextView
                        style="@style/BottomBarTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="区域" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="16.0dip"
                android:background="#ffcccccc" />

            <RelativeLayout
                android:id="@+id/navi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_bm_button_background"
                android:clickable="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/main_icon_nav" />

                    <TextView
                        style="@style/BottomBarTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="排名" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="16.0dip"
                android:background="#ffcccccc" />

            <RelativeLayout
                android:id="@+id/to_personal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/main_br_button_background"
                android:clickable="true" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/redpoint_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginTop="5.0dip"
                        android:paddingRight="10.0dip"
                        android:src="@drawable/hot_point"
                        android:visibility="gone" />

                    <TextView
                        style="@style/BottomBarTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:drawableLeft="@drawable/main_icon_mine"
                        android:text="更多" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>