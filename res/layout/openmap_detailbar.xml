<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_poidetail_header_own"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/route_bottom_bar_bg"
    android:minHeight="105.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/ll_poidetail_head_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/btn_poidetail_head_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/title_bar_btn_margin"
                android:layout_marginRight="@dimen/title_bar_btn_margin"
                android:src="@drawable/btn_back_common" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/poidetail_split" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <Button
                android:id="@+id/btn_poidetail_showmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="12.0dip"
                android:background="#00000000"
                android:drawableLeft="@drawable/icon_poidetail_info"
                android:singleLine="true"
                android:text="详情"
                android:textColor="#ff008afc"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_toLeftOf="@id/btn_poidetail_showmap"
                android:src="@drawable/poidetail_split" />

            <LinearLayout
                android:id="@+id/layout_head_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_toLeftOf="@id/separator"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_setctionA"
                        style="@style/Text.placeListItem_Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_weight="10.0"
                        android:singleLine="true"
                        android:text="湖北武汉市武昌区" />

                    <LinearLayout
                        android:id="@+id/layout_setctionB_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_sectionB"
                            style="@style/Text.placeListItem_Second"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:layout_weight="1.0"
                            android:ellipsize="end"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/tv_sectionC"
                            style="@style/Text.placeListItem_Second"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_weight="1.0"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_sectionD"
                        style="@style/Text.placeListItem_Second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:gravity="center_vertical"
                        android:paddingTop="1.0dip"
                        android:singleLine="true"
                        android:textSize="14.0sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutFunBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/btn_poidetail_nearby"
                android:layout_width="wrap_content"
                android:layout_height="34.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_leftbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/previous" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一个"
                    android:textColor="@color/defaultBtnTextColor"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_poidetail_nav"
                android:layout_width="wrap_content"
                android:layout_height="34.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_rightbtn_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一个"
                    android:textColor="@color/defaultBtnTextColor"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_poidetail_phone"
            android:layout_width="wrap_content"
            android:layout_height="34.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_poidetail_tel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textColor="@color/defaultBtnTextColor"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>