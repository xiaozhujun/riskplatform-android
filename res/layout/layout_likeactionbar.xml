<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar_bgcolor"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/ibtn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:background="@drawable/actionbar_bgcolor"
        android:contentDescription="@string/image"
        android:scaleType="fitCenter"
        android:src="@drawable/actionbar_map" />

    <ImageButton
        android:id="@+id/ibtn_risk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:background="@drawable/actionbar_bgcolor"
        android:contentDescription="@string/image"
        android:scaleType="fitCenter"
        android:src="@drawable/actionbar_risk" />

	<ImageButton
	    android:id="@+id/ibtn_list"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:adjustViewBounds="false"
	    android:background="@drawable/actionbar_bgcolor"
	    android:contentDescription="@string/image"
	    android:scaleType="fitCenter"
	    android:src="@drawable/actionbar_list" />

</LinearLayout>
