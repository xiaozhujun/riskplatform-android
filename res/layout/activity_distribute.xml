<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffededed"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar_distribute" />

    <RelativeLayout
        android:id="@+id/my_1"
        style="@style/common_card_layout.margin_L_R"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_listitem_singleline_high"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_listitem_top_selector" >

        <TextView
            android:id="@+id/risk_level"
            android:layout_width="75.0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_listitem_singleline_leftimage_marginleft"
            android:layout_marginRight="@dimen/common_listitem_singleline_leftimage_marginright"
            android:singleLine="true"
            android:text="风险等级"
            android:textAppearance="@style/CommonListItemTitleText" />

        <ImageView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_toRightOf="@id/risk_level"
            android:contentDescription="@string/image"
            android:src="@drawable/poidetail_split" />

        <TextView
            android:id="@+id/craneNumber"
            android:layout_width="75.0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_listitem_singleline_leftimage_marginleft"
            android:layout_marginRight="@dimen/common_listitem_singleline_leftimage_marginright"
            android:layout_toRightOf="@id/separator"
            android:singleLine="true"
            android:text="设备数量"
            android:textAppearance="@style/CommonListItemTitleText" />

        <ImageView
            android:id="@+id/separator1"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_toRightOf="@id/craneNumber"
            android:contentDescription="@string/image"
            android:src="@drawable/poidetail_split" />

        <TextView
            android:id="@+id/scale"
            android:layout_width="75.0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_listitem_singleline_leftimage_marginleft"
            android:layout_marginRight="@dimen/common_listitem_singleline_leftimage_marginright"
            android:layout_toRightOf="@id/separator1"
            android:singleLine="true"
            android:text="所占比例"
            android:textAppearance="@style/CommonListItemTitleText" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/common_divider_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_travel"
        style="@style/common_card_layout.margin_L_R"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/common_listitem_bottom_selector" >

        <ListView
            android:id="@+id/listView_distribute"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:divider="@null">
        </ListView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/common_card_layout.margin_L_R"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/common_listitem_singleline_leftimage_marginleft"
        android:layout_marginRight="@dimen/common_listitem_singleline_leftimage_marginright"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_listitem_top_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text="风险等级说明:" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text="风险等级 1：风险值（0-10）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text="风险等级 2：风险值（11-20）"
                android:textColor="#00FFFF"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#00FF7F"
                android:text="风险等级 3：风险值（21-30）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#20B2AA"
                android:text="风险等级 4：风险值（31-40）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#32CD32"
                android:text="风险等级 5：风险值（41-50）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#DAA520"
                android:text="风险等级 6：风险值（51-60）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#FFA500"
                android:text="风险等级 7：风险值（61-70）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="#FF4500"
                android:text="风险等级 8：风险值（71-80）"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_middle_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:text="风险等级 9：风险值（81-90）"
                android:textColor="#FF1493"
                android:textAppearance="@style/NavCommonListItemInfoText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/common_listitem_bottom_selector"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:textColor="@color/red"
                android:text="风险等级 10：风险值（91-100）"
                android:textAppearance="@style/NavCommonListItemInfoText" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>