<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:baidu="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10.0dip"
    android:layout_marginRight="10.0dip"
    android:layout_marginTop="9.0dip"
    android:background="@drawable/btn_lookaround_detail" >

    <CheckBox
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="12.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/content_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_toLeftOf="@id/distance"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/busstop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12.0dip"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/content_title_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="九头鸟酒家"
                    android:textColor="#ff333333"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@+id/groupon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.0dip"
                    android:src="@drawable/hrisk" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_price_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:orientation="horizontal" >


                <RatingBar
                    android:id="@+id/content_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:progressDrawable="@drawable/place_ratingbar" />

                <TextView
                    android:layout_marginLeft="3.0dip"
                    android:id="@+id/content_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#ff737373"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/content_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:singleLine="true"
                    android:textColor="#ff737373"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/content_reason"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_left"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/bg_lookaround_reason"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8.0dip"
        android:text="推荐理由：随处可见依附于建筑物而存在的风格各异、大小不同的咖啡馆、大街小巷……"
        android:textColor="#ff666666"
        android:textSize="12.0sp" />

    <TextView
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_below="@id/content_reason" />

</RelativeLayout>