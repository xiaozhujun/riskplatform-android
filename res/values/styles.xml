<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CommonSearchboxHomeText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="BottomBarTextStyle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="CommonTopBarRightImageText">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff008afc</item>
    </style>

    <style name="CommonTopBarMiddleText">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="LocationProgressStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">20.0dip</item>
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loc_progress_bar</item>
        <item name="android:indeterminateDuration">1200</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>

    <style name="Text" />

    <style name="Text.placeListItem_Primary" parent="@style/Text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="Text.placeListItem_Second" parent="@style/Text">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff737373</item>
    </style>

    <style name="Text.primaryTitle" parent="@style/Text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="Text.secondaryTitle" parent="@style/Text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff4d4d4d</item>
    </style>

    <style name="Text.thirdTitle" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff4d4d4d</item>
    </style>

    <style name="Text.primaryListTitle" parent="@style/Text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="Text.secondaryListTitle" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff6d6d6d</item>
    </style>

    <style name="Text.secondaryBigListTitle" parent="@style/Text">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff6d6d6d</item>
    </style>

    <style name="Text.thirdListTitle" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff6d6d6d</item>
    </style>

    <style name="common_card_layout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_card_layout.margin_L_R" parent="@style/common_card_layout">
        <item name="android:layout_marginLeft">@dimen/common_card_layout_left</item>
        <item name="android:layout_marginRight">@dimen/common_card_layout_right</item>
    </style>

    <style name="Text.NoDataHint" parent="@style/Text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ListView" />
    <style name="ListView.defListEx" parent="@style/ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">2.0px</item>
    </style>
    
    <style name="CommonListItemTitleText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="NavCommonListItemTitleText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    
    <style name="NavCommonListItemInfoText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff737373</item>
    </style>
</resources>